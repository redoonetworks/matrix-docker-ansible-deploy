---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: {{ matrix_k8s_resource_prefix }}-nginx-proxy
  annotations:
    nginx.ingress.kubernetes.io/proxy-body-size: "256m"
    nginx.org/client-max-body-size: "256m"
    cert-manager.io/cluster-issuer: letsencrypt-staging
spec:
  ingressClassName: nginx
  rules:
    - host: {{ matrix_server_fqn_matrix }}
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: {{ matrix_k8s_resource_prefix }}-matrix-nginx-proxy
                port:
                  number: 8080
    - host: {{ matrix_server_fqn_element }}
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: {{ matrix_k8s_resource_prefix }}-matrix-nginx-proxy
                port:
                  number: 8080
    - host: {{ matrix_domain }}
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: {{ matrix_k8s_resource_prefix }}-matrix-nginx-proxy
                port:
                  number: 8080
  tls: 
  - hosts:
    - {{ matrix_server_fqn_matrix }}
    - {{ matrix_server_fqn_element }}
    - {{ matrix_domain }}
    secretName: {{ matrix_k8s_resource_prefix }}-cert
