kind: NetworkPolicy
apiVersion: networking.k8s.io/v1
metadata:
  name: {{ matrix_k8s_resource_prefix }}-default-deny-all
spec:
  podSelector: 
    matchLabels:  
      {{ matrix_k8s_selector|to_nice_yaml(indent=6)|trim|indent(6) }}

  policyTypes:
    - Ingress
    - Egress

  ingress:    
  - from:
    - podSelector:
        matchLabels:  
          role: matrix-nginx-proxy
          {{ matrix_k8s_selector|to_nice_yaml(indent=10)|trim|indent(10) }}
  
  egress:
  
  # All can access CoreDNS  
  - to:
    - namespaceSelector:
        matchLabels:
          kubernetes.io/metadata.name: kube-system
    ports:
    - protocol: UDP
      port: 53